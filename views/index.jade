extends layout

block body
	- if (locals.demo)
		div.notice-bar This is your demo board by hk. To make your private board, type your name on <a href="/">HOME</a>

	
	div.board-outline
		div#board
			div#board-doodles

			table#board-table.board-table
				tr
					td#icon-col(width='1%')
						image#add-col.col-icon(width='30', height='30', src='images/plus_alt_32x32.png')
						image#delete-col.col-icon(width='20', height='20', src='images/minus_alt_32x32.png')


	div.buttons
		i#create-card.fa.fa-plus-circle.fa-4x.bottom-icon
		i#smallify.fa.fa-expand.fa-4x.bottom-icon


	div.stickers
		div.sticker#sticker-red
		div.sticker#sticker-blue
		div.sticker#sticker-yellow
		div.sticker#sticker-green
		div.sticker#sticker-pink
		div.sticker#sticker-lightblue
		div.sticker#sticker-orange
		div.sticker#sticker-purple
		div.sticker#sticker-silverstar
		//div#addsticker
		//br
		
		div.sticker#sticker-gold
		//	image(src="/images/stickers/sticker-gold.png")
		div.sticker#sticker-bluestar
		div.sticker#sticker-silverstar		
		div.sticker#sticker-redstar
		div.sticker#nosticker


	div.names
		p connected on:
		image#user-icon(src="/images/user.png")
		input#yourname-input
		span.you-text (you)
		ul#names-ul
